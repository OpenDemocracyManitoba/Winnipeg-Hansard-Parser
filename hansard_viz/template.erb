<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!-- <meta http-equiv="refresh" content="4"> -->
    <title><%= @hansard['meta']['date'] %> Winipeg Council Meeting</title>
    <link rel="stylesheet" href="style.css" type="text/css" media="screen" />
</head>
<body>
    <div id="wrap">
        <header>
            <h1><%= @hansard['meta']['date'] %> Winipeg Council Meeting</h1>
        </header>
        <section class="top-words">
            <h2>Frequently Used Terms</h2>
            <ul>
            <% @hansard['meta']['words_spoken']['all_words_counted'].sorted_word_occurrences.take(20).each do |word| %>
                <li><%= word.first.capitalize %></li>
            <% end %>
            </ul>
        </section>
        <section class="attendnce">
            <h2>Attendance & Participation</h2>
            <ul>
            <% @hansard['meta']['words_spoken']['speakers'].each do |speaker| %>
                <li><%= speaker['name'] %> - <%= speaker['all_words_counted'].word_count %></li>
            <% end %>
            </ul>
        </section>
        <ul class='sections'>
            <% @hansard['hansard'].each do |section| %>
                <li class="section <%= section['type'] %>">
                    <% if section['type'] == 'section' %> 
                        <h2><%= section['name'] %></h2>
                    <% elsif section['type'] == 'speaker' %>
                        <header>
                            <img src="images/<%= section['name'].gsub(' ','_') %>.jpg">
                        </header>
                        <section>
                            <h2><%= section['name'] %></h2>
                            <blockquote>
                                <%= section['spoken'] %>
                            </blockquote>
                        </section>
                    <% elsif section['type'] == 'vote' %>
                        <h2><%= section['name'] %></h2>
                        <dl>
                            <dt>Outcome</dt>
                            <dd><%= section['outcome'] %></dd>
                            <dt>Yeas</dt>
                            <dd><%= section['yeas'] %></dd>
                            <dt>Nays</dt>
                            <dd><%= section['nays'] %></dd>
                        </dl>
                    <% elsif section['type'] == 'motion' %>
                        <h2><%= section['name'] %></h2>
                        <dl>
                            <dt>Moved By</dt>
                            <dd><%= section['moved_by'] %></dd>
                            <dt>Seconded By</dt>
                            <dd><%= section['seconded_by'] %></dd>
                            <dt>Motion</dt>
                            <dd><%= section['motion_text'] %></dd>
                        </dl>
                    <% end %>
                </li>
            <% end %>
        </ul>
    </div>
</body>
</html>

